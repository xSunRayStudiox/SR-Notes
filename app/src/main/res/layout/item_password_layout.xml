<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Password_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:paddingStart="7dp"
    android:paddingTop="7dp"
    android:paddingEnd="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:id="@+id/pass_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/google_sans_bold"
            android:padding="5dp"
            android:singleLine="true"
            android:text="@string/heading"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pass_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/google_sans_regular"
            android:gravity="right|center"
            android:paddingEnd="5dp"
            android:text="23/04/2002"
            android:textColor="#8E8B8B"
            android:textSize="12sp"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pass_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:hint="965245600914"
            android:padding="5dp"
            android:textSize="12sp"
            app:drawableStartCompat="@drawable/ic_id_24" />

        <ImageView
            android:id="@+id/copy_id"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:src="@drawable/ic_copy" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pass_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:hint="**************"
            android:padding="5dp"
            android:textSize="12sp"
            app:drawableStartCompat="@drawable/lock_person" />

        <ImageView
            android:id="@+id/copy_pass"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:src="@drawable/ic_copy" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/silver" />

</LinearLayout>